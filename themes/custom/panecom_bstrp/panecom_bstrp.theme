/**
* hook_preprocess_page
*/
function panecom_bstrp_preprocess_html(&$vars) {
  
  //Ajouter une classe pour distinguer les Ã©ditions de nodes
  $current_path = \Drupal::service('path.current')->getPath();
  if (strpos($current_path, '/node') !== false && strpos($current_path, '/edit') !== false)
	$vars['attributes']['class'][]  = 'edit-node';
  elseif (strpos($current_path, '/node') !== false && strpos($current_path, '/translations') !== false)
	$vars['attributes']['class'][]  = 'translate-node';
	  
}
